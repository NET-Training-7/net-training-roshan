        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
            <label class="form-check-label" for="inlineRadio1">1</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
            <label class="form-check-label" for="inlineRadio2">2</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3" disabled>
            <label class="form-check-label" for="inlineRadio3">3 (disabled)</label>
        </div>*@
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Contact"></label>
        <span asp-validation-for="Contact" class="text-danger"></span>
        <input class="form-control" asp-for="Contact" />
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Dob"></label>
        <input class="form-control" asp-for="Dob" />
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Major"></label>
        <span asp-validation-for="Major" class="text-danger"></span>
        <input class="form-control" asp-for="Major" />
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Semester"></label>
        <span asp-validation-for="Semester" class="text-danger"></span>
        <input class="form-control" asp-for="Semester" />
    </div>

    <button class="btn btn-success" type="submit">Register Student</button>
</form>




