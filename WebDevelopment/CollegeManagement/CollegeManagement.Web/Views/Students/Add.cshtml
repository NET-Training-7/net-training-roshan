@using CollegeManagement.Web.Enums;
@model Student
@{
    var gender = Enum.GetValues<Sex>();
}

<h3 class="text-center">New Student Form</h3>

<form asp-action="Add" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label" asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="RollNo"></label>
        <span asp-validation-for="RollNo" class="text-danger"></span>
        <input class="form-control" asp-for="RollNo" />
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Gender"></label>
        <span asp-validation-for="Gender" class="text-danger"></span>
        <br/>
        @foreach(var g in gender)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Gender" id="@g" value="@g">
                <label class="form-check-label" for="@g">@g</label>
            </div>
        }
