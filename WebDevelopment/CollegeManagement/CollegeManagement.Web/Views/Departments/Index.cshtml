@model IEnumerable<CollegeManagement.Web.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<a asp-controller="departments" asp-action="create" class="btn btn-success float-end"><i class="bi bi-person-plus-fill"></i> New department</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Established)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Established)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi-pencil text-warning"></i></a> 
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="bi-eye"></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi-trash3 text-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
